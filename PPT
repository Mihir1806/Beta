SELECT
    CASE
        WHEN blank_cols = '' THEN identifier
        ELSE CONCAT(identifier, ' - ', blank_cols)
    END AS `key`,
    
    0 AS amt
FROM (
    SELECT
        COALESCE(NULLIF(TRIM(CustomerID), ''), TRIM(FullName)) AS identifier,
        
        CONCAT_WS(', ',
            IF(FullName IS NULL OR FullName = '', 'FullName', NULL),
            IF(Email IS NULL OR Email = '', 'Email', NULL),
            IF(PhoneNumber IS NULL OR PhoneNumber = '', 'PhoneNumber', NULL),
            IF(JoinDate IS NULL, 'JoinDate', NULL)
        ) AS blank_cols
        
    FROM Customers
) AS sub;