/* MySQL 8 / PostgreSQL 9.1 / SQL Server 2017 syntax */

SELECT
    -- build identifier (CustomerID or, if empty, FullName)
    -- then append " - <blank list>" only when something is blank
    CASE
        WHEN blank_cols = ''                  -- nothing missing
          THEN identifier
        ELSE CONCAT(identifier, ' - ', blank_cols)
    END                  AS "key",

    0                    AS amt               -- constant 0
FROM (
    /* inner query: create identifier + list of blank columns */
    SELECT
        COALESCE(NULLIF(TRIM(CAST(CustomerID AS VARCHAR)), ''),
                 TRIM(FullName)) AS identifier,

        LTRIM(RTRIM(
            CONCAT_WS(', ',
                CASE WHEN (FullName    IS NULL OR FullName    = '') THEN 'FullName'    END,
                CASE WHEN (Email       IS NULL OR Email       = '') THEN 'Email'       END,
                CASE WHEN (PhoneNumber IS NULL OR PhoneNumber = '') THEN 'PhoneNumber' END,
                CASE WHEN  JoinDate    IS NULL                      THEN 'JoinDate'    END
            )
        )) AS blank_cols
    FROM Customers
) AS t;