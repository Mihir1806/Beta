=LET(
    rawDate, STATEMENT!$E$2,
    searchRange, 'A'!$A$1:$ZZ$500,
    
    colIdx, MAX(IFERROR((searchRange=rawDate)*COLUMN(searchRange),0)),
    rowIdx, MAX(IFERROR((searchRange=rawDate)*ROW(searchRange),0)),
    
    targetCol, INDEX('A'!$A:$ZZ, 0, colIdx),
    belowDate, INDEX(targetCol, rowIdx + 1):INDEX(targetCol, 1000),
    
    firstVal, XLOOKUP(TRUE, (belowDate <> "") * (belowDate <> 0), belowDate, "Not Present", 0),
    
    IF(colIdx=0, "Date Not Found", firstVal)
)
