=LET(
 d, DATEVALUE(SUBSTITUTE(STATEMENT!E2,"/","-")),
 r, AGGREGATE(15,6,ROW(A!A1:Z2000)/(DATEVALUE(SUBSTITUTE(A!A1:Z2000,"-","/"))=d),1),
 c, AGGREGATE(15,6,COLUMN(A!A1:Z1)/(DATEVALUE(SUBSTITUTE(A!A1:Z2000,"-","/"))=d),1),
 INDEX(A!A:Z,
   r + MATCH(TRUE, INDEX(INDEX(A!A:Z,,c)<>"" , r+1):INDEX(INDEX(A!A:Z,,c)<>"" , r+5), 0),
   c
 )
)