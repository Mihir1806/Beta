let
    // Assuming ToolList and LOG_STATUS are already loaded into Power Query

    // Step 1: Merge the LOG_STATUS table with ToolList based on Job Name
    MergedTable = Table.NestedJoin(LOG_STATUS, {"Job Name"}, ToolList, {"Job Name"}, "ToolList", JoinKind.LeftOuter),
    
    // Step 2: Expand the ToolList columns (Tool ID and Tool Name) into LOG_STATUS
    ExpandedTable = Table.ExpandTableColumn(MergedTable, "ToolList", {"Tool ID", "Tool Name"}, {"Tool ID", "Tool Name"}),

    // Step 3: Group by Job Name to handle multiple Tool IDs for the same Job Name
    GroupedTable = Table.Group(ExpandedTable, {"Job Name", "Error"}, {
        {"ToolDetails", each Text.Combine(List.Transform([Tool ID], 
            each "Tool ID " & Text.From(_) & " (Tool Name: " & List.First([Tool Name]) & ")"), ", "), type text}
    }),

    // Step 4: Add a custom column to format Tool IDs, Tool Names, and Errors
    AddCustomColumn = Table.AddColumn(GroupedTable, "CustomColumn", each 
        [ToolDetails] & ": " & [Error])

in
    AddCustomColumn