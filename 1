let
    // Assuming ToolList and LOG_STATUS are already loaded into Power Query

    // Step 1: Merge the LOG_STATUS table with ToolList based on Job Name
    MergedTable = Table.NestedJoin(LOG_STATUS, {"Job Name"}, ToolList, {"Job Name"}, "ToolList", JoinKind.LeftOuter),
    
    // Step 2: Expand the ToolList columns (Tool ID and Tool Name) into LOG_STATUS
    ExpandedTable = Table.ExpandTableColumn(MergedTable, "ToolList", {"Tool ID", "Tool Name"}, {"Tool ID", "Tool Name"}),

    // Step 3: Add a custom column that formats the output as "Error ToolId <ToolId>: <Error>"
    AddCustomColumn = Table.AddColumn(ExpandedTable, "FormattedError", each 
        "Error ToolId " & Text.From([Tool ID]) & ": " & [Error]),

    // Step 4: Group by Job Name and aggregate the formatted errors into a single cell per Job Name
    GroupedTable = Table.Group(AddCustomColumn, {"Job Name"}, {
        {"AllErrors", each Text.Combine([FormattedError], "#(lf)"), type text}
    })

in
    GroupedTable