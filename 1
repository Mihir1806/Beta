=AGGREGATE(15,6,ROW('SheetA'!A1:XFD10000)/( 'SheetA'!A1:XFD10000=STATEMENT!E2 ),1)


=AGGREGATE(15,6,COLUMN('SheetA'!A1:XFD1)/( 'SheetA'!A1:XFD10000=STATEMENT!E2 ),1)


=INDEX('SheetA'!A:XFD,
 AA1 + MATCH(TRUE, INDEX(INDEX('SheetA'!A:XFD,,AB1)<>"" , AA1+1):INDEX(INDEX('SheetA'!A:XFD,,AB1)<>"" , AA1+5), 0),
 AB1
)